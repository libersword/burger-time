<h1>Burger Time!</h1>


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>

<h2>To be Devoured</h2>

<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> burgers/burger devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> burgers/burger devour=false}}
    {{/if}}
  {{/each}}
</ul>

